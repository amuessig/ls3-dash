<% content_for :title do %>LS3 Main Dashboard<% end %>
<script>
$(document).ready(function(){
	setTimeout(function(){
		$(".icon-background").animate({opacity: 0},10000);
	},10000);
});
</script>
<div class="gridster">
  <ul>
    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" data-image="/i3logo.svg"></div>
    </li>

    <li data-row="3" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Clock"></div>
      <i class="fa fa-clock-o icon-background"></i>
    </li>

    <li data-row="2" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="days-till-friday" data-view="Text" data-title="X days" data-text="till Friday." data-moreinfo="" style="background-color:#FF981D;"></div>
      <i class="fa fa-calendar icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="3">
      <div data-id="vacations" data-view="Table" data-title="Absence Times"></div>
      <i class="fa fa-plane icon-background"></i>
    </li>

    <li data-row="1" data-col="3" data-sizex="2" data-sizey="1">
    	<div data-id="coffee-text" data-view="Meterright" data-text="Letzter Kaffee wurde um 17:47 gekocht." data-min="0" data-max="100" data-moreinfo="keep calm and make coffee" data-value=100></div>
      <i class="fa fa-coffee icon-background"></i>
    </li>

  <li data-row="1" data-col="1" data-sizex="2" data-sizey="2">
    <div data-id="coffee" data-view="Coffee" data-title="Coffee" style="background-color:#47bbb3;"></div>
      <i class="fa fa-coffee icon-background"></i>
  </li>

  </ul>
</div>
